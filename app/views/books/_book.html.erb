<div id="<%= dom_id book %>">
    <p>
        <strong>Name:</strong>
        <%= book.name %>
    </p>

    <p>
        <strong>Description:</strong>
        <%= book.description %>
    </p>

    <p>
        <strong>Author:</strong>
        <%= book.author_id %>
    </p>

    <p><strong>ISBN:</strong> <%= book.isbn.presence || "N/A" %></p>
</div>