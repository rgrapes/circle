<% if notice %>
<p class="notice"><%= notice %></p>
<% end %>

<div class="book-detail">
    <%= render @book %>

    <div class="action-links">
        <%= link_to "Edit this book", edit_book_path(@book), class: 'edit-link' %>
        <%= link_to "Back to books", books_path, class: 'back-link' %>

        <%= button_to "Destroy this book", @book, method: :delete, class: 'delete-button' %>
    </div>
</div>